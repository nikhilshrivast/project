<html>
<head>
    <style>
        .card-registration .select-input.form-control[readonly]:not([disabled]) {
            font-size: 1rem;
            line-height: 2.15;
            padding-left: .75em;
            padding-right: .75em;
        }

        .card-registration .select-arrow {
            top: 13px;
        }
    </style>
</head>
<body>

    <section class="h-100 bg-dark">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card card-registration my-4">
                        <div class="row g-0">
                            <div class="col-xl-6 d-none d-xl-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                     alt="Sample photo" class="img-fluid"
                                     style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                            </div>
                            <div class="col-xl-6">
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-5 text-uppercase">Student Registration form</h3>
                                    <p>@ViewBag.Message</p>
                                    <form method="post" action="~/Home/Index">
                                        <div class="row">
                                            <div class="col-md-6 mb-4">
                                                <div class="form-outline">
                                                    <input type="text" id="form3Example1m" name="FullName" class="form-control form-control-lg" />
                                                    <label class="form-label" for="form3Example1m">First name</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-4">
                                                <div class="form-outline">
                                                    <input type="text" id="form3Example1n" name="LastName" class="form-control form-control-lg" />
                                                    <label class="form-label" for="form3Example1n">Last name</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">
                                            <h6 class="mb-0 me-4">Gender: </h6>
                                            <div class="form-check form-check-inline mb-0 me-4">
                                                <input class="form-check-input" type="radio" name="Gender" id="femaleGender"
                                                       value="option1" />
                                                <label class="form-check-label" for="femaleGender">Female</label>
                                            </div>
                                            <div class="form-check form-check-inline mb-0 me-4">
                                                <input class="form-check-input" type="radio" name="Gender" id="maleGender"
                                                       value="option2" />
                                                <label class="form-check-label" for="maleGender">Male</label>
                                            </div>
                                            <div class="form-check form-check-inline mb-0">
                                                <input class="form-check-input" type="radio" name="Gender" id="otherGender"
                                                       value="option3" />
                                                <label class="form-check-label" for="otherGender">Other</label>
                                            </div>
                                        </div>
                                        <label>Graduction</label>
                                        <div class="row">
                                            <div class="col-md-6 mb-4">
                                                <select class="select" multiple name="Graduction">
                                                    <option value="2">B.tech</option>
                                                    <option value="3">High school</option>
                                                    <option value="4">intermediate</option>
                                                    <option value="5">MBA</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="date" name="Dateofbirth" id="form3Example9" class="form-control form-control-lg" />
                                            <label class="form-label" for="form3Example9">DOB</label>
                                        </div>
                                        <div class="col-12 mb-3">
                                            <label>Interested in</label>
                                            <div class="row">
                                                <div class="col-3">
                                                    <div class="custom-control  women custom-checkbox" id="Interestedin">
                                                        <input type="checkbox" class="custom-control-input" value="1" id="Cricket" checked="">
                                                        <label class="custom-control-label" for="Cricket">Cricket</label>
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input" value="2" id="Badminton" checked="">
                                                        <label class="custom-control-label" for="Badminton">Badminton</label>
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input" value="2" id="londrive" checked="">
                                                        <label class="custom-control-label" for="Badminton">Longdrive</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <input type="email" name="EmailId" id="form3Example97" class="form-control form-control-lg" />
                                            <label class="form-label" for="form3Example97">Email ID</label>
                                        </div>
                                        <label for="avatar">Choose a profile picture:</label>
                                        <div class="form-outline mb-4">
                                            <input type="file"
                                                   id="avatar" name="avatar"
                                                   accept="image/png, image/jpeg">
                                        </div>
                                        <div class="d-flex justify-content-end pt-3">
                                            <input type="submit" class="btn btn-light btn-lg"></input>
                                            <input type="submit" class="btn btn-warning btn-lg ms-2"></input>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>